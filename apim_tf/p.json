<policies>
  <inbound>
    <!-- Optional: quick header gate for matched APIs -->
    <choose>
      <when condition="@(context.Request.Method.Equals("OPTIONS", StringComparison.OrdinalIgnoreCase))">
        <return-response>
          <set-status code="204" reason="No Content" />
        </return-response>
      </when>
      <when condition="@(!context.Request.Headers.ContainsKey("Authorization") 
                         || !context.Request.Headers.GetValueOrDefault("Authorization").StartsWith("Bearer "))">
        <return-response>
          <set-status code="401" reason="Unauthorized" />
          <set-header name="WWW-Authenticate" exists-action="override">
            <value>Bearer</value>
          </set-header>
          <set-body>Authentication required.</set-body>
        </return-response>
      </when>
    </choose>
    <base />
  </inbound>
  <backend><base /></backend>
  <outbound><base /></outbound>
  <on-error><base /></on-error>
</policies>
